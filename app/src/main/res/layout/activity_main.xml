<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp">

        <RelativeLayout
            android:id="@+id/currencyRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_bpiTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="BPI"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/currencybtn_ll"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_bpiTitle"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:theme="@style/BoxTheme">


                <Button
                    android:id="@+id/btn_usd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="USD"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_gdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="GBP"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/btn_eur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="EUR"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/txt_currencyData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/currencybtn_ll"
                android:layout_marginTop="5dp"
                android:background="@drawable/custome_edittext"
                android:fontFamily="@font/poppins_medium"
                android:lines="5"
                android:padding="5dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/desclaimerRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/currencyRl">

            <TextView
                android:id="@+id/disclaimerTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/poppins_semibold"
                android:text="Disclaimer"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/txt_disclaimer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/disclaimerTitle"
                android:background="@drawable/custome_edittext"
                android:fontFamily="@font/poppins_regular"
                android:lines="3"
                android:maxLines="7"
                android:padding="5dp"
                android:scrollbarSize="0dp"
                android:scrollbars="vertical"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <LinearLayout
                android:id="@+id/chartTitle_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_below="@id/txt_disclaimer">

                <TextView
                    android:id="@+id/chartTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="Chart : "
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/txt_Chart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/disclaimerTitle"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custome_edittext"
                    android:fontFamily="@font/poppins_regular"
                    android:lines="1"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>


        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/timesRl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/desclaimerRl"
            android:layout_marginTop="5dp">

            <TextView
                android:id="@+id/txt_timesTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_semibold"
                android:text="Time"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <LinearLayout
                android:id="@+id/updatedTime_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_timesTitle">

                <TextView
                    android:id="@+id/updatedTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="Updated : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_updated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/disclaimerTitle"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custome_edittext"
                    android:fontFamily="@font/poppins_regular"
                    android:lines="1"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/updatedIsoTime_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/updatedTime_ll">

                <TextView
                    android:id="@+id/updatedISOTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="UpdatedISO : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_updatedISO"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/disclaimerTitle"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custome_edittext"
                    android:fontFamily="@font/poppins_regular"
                    android:lines="1"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/updatedUkTime_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/updatedIsoTime_ll">

                <TextView
                    android:id="@+id/updatedUKTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="UpdatedUK : "
                    android:textColor="@color/black"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txt_updatedUK"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/disclaimerTitle"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custome_edittext"
                    android:fontFamily="@font/poppins_regular"
                    android:lines="1"
                    android:padding="3dp"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>


        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>